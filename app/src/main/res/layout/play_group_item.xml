<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <com.gjf.lovezzu.view.CircleImageView
            android:id="@+id/g_group_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:src="@drawable/test_user" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/g_end_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/g_group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="上课啦同学们"
                            android:textColor="#0091FF" />

                        <TextView
                            android:id="@+id/g_group_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="本班不收瓜皮学生，瓜而不皮" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/g_join_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_text"
                        android:gravity="center"
                        android:text="加入群组"
                        android:textColor="#fff" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/g_end_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/g_end_mid"
                android:background="@drawable/shape_play_news"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/g_play_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/g_play_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_group" />

                    <ImageView
                        android:id="@+id/g_play_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/new_add" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/g_group_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="小漠国服第一系列的第一螳螂丶第一大眼,国服最高排名第八,曾任CC战队教练击败OMG战队,现为国服第一金牌讲师长驻斗鱼.." />

                <LinearLayout
                    android:id="@+id/g_group_info_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/g_group_info_image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_image"
                        android:src="@drawable/test_person_01" />

                    <ImageView
                        android:id="@+id/g_group_info_image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_image"
                        android:src="@drawable/test_person_03" />

                    <ImageView
                        android:id="@+id/g_group_info_image3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_image"
                        android:src="@drawable/test_person_06" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/play_group_joiners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="群组成员" />

                    <LinearLayout
                        android:id="@+id/joiners_images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <com.gjf.lovezzu.view.CircleImageView
                            android:id="@+id/g_group_joiner1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/test_person_01" />


                        <com.gjf.lovezzu.view.CircleImageView
                            android:id="@+id/g_group_joiner2"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/test_person_01" />

                        <com.gjf.lovezzu.view.CircleImageView
                            android:id="@+id/g_group_joiner3"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/test_person_01" />

                        <com.gjf.lovezzu.view.CircleImageView
                            android:id="@+id/g_group_joiner4"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/test_person_01" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/g_end_news"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/group_location" />

                <TextView
                    android:id="@+id/g_group_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="郑州大学"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/g_group_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="1 km"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>